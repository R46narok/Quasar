services:
  mongo:
    environment:
      MONGO_INITDB_ROOT_PASSWORD: example
      MONGO_INITDB_ROOT_USERNAME: root
    image: mongo
    ports:
    - published: 27017
      target: 27017
    restart: always
  mongo-express:
    depends_on:
      mongo:
        condition: service_started
    environment:
      ME_CONFIG_MONGODB_ADMINPASSWORD: example
      ME_CONFIG_MONGODB_ADMINUSERNAME: root
    image: mongo-express
    ports:
    - published: 8081
      target: 8081
    restart: always
version: '3.4'