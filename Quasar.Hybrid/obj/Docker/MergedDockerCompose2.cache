services:
  mongo:
    environment:
      MONGO_INITDB_ROOT_PASSWORD: example
      MONGO_INITDB_ROOT_USERNAME: root
    image: mongo
    ports:
    - published: 27017
      target: 27017
    restart: always
  mongo-express:
    depends_on:
      mongo:
        condition: service_started
    environment:
      ME_CONFIG_MONGODB_ADMINPASSWORD: example
      ME_CONFIG_MONGODB_ADMINUSERNAME: root
    image: mongo-express
    ports:
    - published: 8081
      target: 8081
    restart: always
  quasar.server:
    build:
      context: D:\Development\Projects\Quasar\Quasar.Hybrid
      dockerfile: Quasar.Server/Dockerfile
    depends_on:
      mongo:
        condition: service_started
    environment:
      MongoDB__Host: mongo
    image: quasarserver
    ports:
    - published: 5001
      target: 5001
    - published: 5000
      target: 5000
version: '3.4'