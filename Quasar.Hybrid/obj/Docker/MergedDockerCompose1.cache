services:
  mongo:
    environment:
      MONGO_INITDB_ROOT_PASSWORD: example
      MONGO_INITDB_ROOT_USERNAME: root
    image: mongo
    ports:
    - published: 27017
      target: 27017
    restart: always
  mongo-express:
    depends_on:
      mongo:
        condition: service_started
    environment:
      ME_CONFIG_MONGODB_ADMINPASSWORD: example
      ME_CONFIG_MONGODB_ADMINUSERNAME: root
    image: mongo-express
    ports:
    - published: 8081
      target: 8081
    restart: always
  quasar.server:
    build:
      context: D:\Development\Projects\Quasar\Quasar.Hybrid
      dockerfile: Quasar.Server/Dockerfile
      labels:
        com.microsoft.created-by: visual-studio
        com.microsoft.visual-studio.project-name: Quasar.Server
      target: base
    container_name: Quasar.Server
    depends_on:
      mongo:
        condition: service_started
    entrypoint: tail -f /dev/null
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_LOGGING__CONSOLE__DISABLECOLORS: "true"
      ASPNETCORE_URLS: https://+:443;http://+:80
      DOTNET_USE_POLLING_FILE_WATCHER: '1'
      MongoDB__Host: mongo
      NUGET_FALLBACK_PACKAGES: /root/.nuget/fallbackpackages;/root/.nuget/fallbackpackages2
    image: quasarserver:dev
    labels:
      com.microsoft.visualstudio.debuggee.arguments: ' --additionalProbingPath /root/.nuget/packages
        --additionalProbingPath /root/.nuget/fallbackpackages --additionalProbingPath
        /root/.nuget/fallbackpackages2  "/app/bin/Debug/netcoreapp3.1/Quasar.Server.dll"'
      com.microsoft.visualstudio.debuggee.killprogram: /bin/sh -c "if PID=$$(pidof
        dotnet); then kill $$PID; fi"
      com.microsoft.visualstudio.debuggee.program: dotnet
      com.microsoft.visualstudio.debuggee.workingdirectory: /app
    ports:
    - published: 5000
      target: 80
    - target: 80
    - published: 5001
      target: 443
    - target: 443
    tty: true
    volumes:
    - D:\Development\Projects\Quasar\Quasar.Hybrid\Quasar.Server:/app:rw
    - C:\Users\Acer\vsdbg\vs2017u5:/remote_debugger:rw
    - C:\Users\Acer\AppData\Roaming\ASP.NET\Https:/root/.aspnet/https:ro
    - C:\Users\Acer\AppData\Roaming\Microsoft\UserSecrets:/root/.microsoft/usersecrets:ro
    - C:\Microsoft\Xamarin\NuGet:/root/.nuget/fallbackpackages:ro
    - C:\Program Files\dotnet\sdk\NuGetFallbackFolder:/root/.nuget/fallbackpackages2:ro
    - C:\Users\Acer\.nuget\packages:/root/.nuget/packages:ro
    - D:\Development\Projects\Quasar\Quasar.Hybrid:/src:rw
version: '3.4'